<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Blur Face</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
	<header>
	</header>

	<main role="main" class="pb-3">
		@RenderBody()
	</main>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2021 - Just For Fun
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>


	<script>
		(function () {
			const address = '@Url.Content("~/service-worker.js")';
			navigator.serviceWorker.register(address).then(reg => {
				reg.onupdatefound = () => {					
					const installingWorker = reg.installing;
					installingWorker.onstatechange = () => {
						console.debug('installingWorker.state: ' + installingWorker.state);

						if (installingWorker.state === 'installed') {
							location.reload();
						}
					};
				};
			});
		})();
	</script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
